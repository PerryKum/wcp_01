/* pages/destination/destination.wxss */
.cover {
  background: lightcoral;
  width: 90%;
  margin: 2% 5%;
  height: 200px;
  border-radius: 10px;
}

.des {
  width: 100%;
  height: 520px;
  background: white;
  margin-top: 20px;
  margin-bottom: -50px;
}

.des_title {
  font-size: larger;
  text-align: center;
  padding: 15px;
}

.des_item {
  width: 90%;
  height: 200px;
  margin-left: 5%;
  margin-top: 20px;
  border-radius: 10px;
}

.des_item_img {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 10px;
  top: -25%;
}

.des_item_info {
  position: relative;
  top: 75%;
  width: 100%;
  height: 25%;
  background: rgba(160,160,160,0.5);
  border-radius: 0 0 10px 10px;
  z-index: 99;
  font-weight: 700;
  font-size: larger;
  color: white;
  text-align: center;
  line-height: 250%;
}

.copyright {
  margin-top: 60px;
}